def lexical_analysis(program):
    tokens = []
    keywords = ["int"]
    operators = ["=", "+", ";"]

    for line in program:
        line = line.replace(";", " ;")
        words = line.split()

        for word in words:
            if word in keywords:
                tokens.append(("KEYWORD", word))
            elif word in operators:
                tokens.append(("OPERATOR", word))
            elif word.isdigit():
                tokens.append(("NUMBER", word))
            else:
                tokens.append(("IDENTIFIER", word))

    print("\nPHASE 1: LEXICAL ANALYSIS")
    for t in tokens:
        print(t)

    return tokens
